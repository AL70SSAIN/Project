<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS for Mentors Slider -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/user-profile.css">
    @await RenderSectionAsync("Css", required: false)
</head>
<body>
    <!-- Theme Toggle Button -->
    <div class="theme-toggle">
        <button id="theme-toggle-btn">
            <i class="fas fa-sun light-icon"></i>
            <i class="fas fa-moon dark-icon"></i>
        </button>
    </div>
    <!-- Header with Navigation -->
    <header class="main-header">
        <div class="container">
            <div class="logo">
                <a href=@Url.Action("Index","Home")>
                    <img src="/image/logo.png" alt="Art code Logo" class="header-logo">
                </a>
            </div>
            <nav class="main-nav">
                <a href=@Url.Action("Index","Home") class="active">Home</a>
                <a href="../mentors/mentors.html">Mentors</a>
                <a href=@Url.Action("Index","RoadMap")>Roadmaps</a>
                <a href=@Url.Action("AboutUs","Home")>About Us</a>
                <a href="../admin/reports.html">Admin</a>
            </nav>
            <a href=@Url.Action("LogIn","Account") class="btn-primary nav-btn">Get started</a>
        </div>
    </header>

    @RenderBody()

    <!-- Footer Section -->
    <footer>
        <div class="footer-container">
            <!-- Logo and Address -->
            <div class="footer-section">
                <img src="images/logo.png" alt="Art code Logo" class="footer-logo" />
                <p>Connecting students with mentors for a better learning experience.</p>
            </div>

            <!-- Company -->
            <div class="footer-section">
                <h3>Company</h3>
                <ul>
                    <li><a href="#">students</a></li>
                    <li><a href="#">mentors</a></li>
                    <li><a href="#">Support</a></li>
                    <li><a href="#">Contact</a></li>
                </ul>
            </div>

            <!-- Product -->
            <div class="footer-section">
                <h3>Product</h3>
                <ul>
                    <li><a href="#">Courses</a></li>
                    <li><a href="#">Pricing</a></li>
                    <li><a href="#">Blog</a></li>
                </ul>
            </div>

            <!-- Legal & Social -->
            <div class="footer-section">
                <h3>Legal</h3>
                <ul>
                    <li><a href="#">Terms & Conditions</a></li>
                    <li><a href="#">Privacy policy</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <div class="social-icons">
                    <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a>
                    <a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>
        <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/common.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
