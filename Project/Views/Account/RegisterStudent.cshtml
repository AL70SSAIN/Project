@model RegisterStudentViewModel
@{
    Layout = "_Layout";
}
@section Css {
    <link rel="stylesheet" href="/css/auth.css">
}

<!-- Auth Section -->
<section class="section auth-section">
    <div class="container">
        <div class="auth-container">
            <div class="auth-header">
                <img src="/image/logo.png" alt="Art code Logo" class="auth-logo">
                <h2>Welcome to Art code</h2>
                <p>Sign up or log in to get started</p>
            </div>
            <div class="auth-tabs">
                <button class="auth-tab" data-tab="login"
                        onclick="location.href='@Url.Action("LogIn", "Account")'">
                    Log In
                </button>
                <button class="auth-tab active" data-tab="signup"
                        onclick="location.href='@Url.Action("RegisterStudent", "Account")'">
                    Sign Up as student
                </button>
                <button class="auth-tab" data-tab="signup"
                        onclick="location.href='@Url.Action("RegisterMentor", "Account")'">
                    Sign Up as mentor
                </button>
            </div>
            <!-- Login Form -->
            <div class="auth-form-container" id="login-form">
                    <form id="studentSignupForm" asp-action="RegisterStudent" asp-controller="Account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" for="studentUsername">Username</label>
                        <input asp-for="UserName" type="text" id="studentUsername" class="form-control" required>
                    </div>
                    <!-- Profile picture field removed -->
                    <div class="form-group">
                        <label asp-for="Email" for="studentEmail">Email</label>
                        <input asp-for="Email" type="email" id="studentEmail" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" for="studentPassword">Password</label>
                        <input asp-for="Password" type="password" id="studentPassword" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" for="studentContact">Contact Number</label>
                        <input asp-for="PhoneNumber" type="tel" id="studentContact" class="form-control" required>
                    </div>
                    <button type="submit" class="btn-primary w-100">Sign Up as Student</button>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @* <script src="/js/auth.js"></script> *@
}
