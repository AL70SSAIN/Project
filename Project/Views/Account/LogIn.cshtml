@model LogInUserViewModel
@{
    Layout = "_Layout";
}
@section Css {
    <link rel="stylesheet" href="/css/auth.css">
}
<!-- Auth Section -->
<section class="section auth-section">
    <div class="container">
        <div class="auth-container">
            <div class="auth-header">
                <img src="/image/logo.png" alt="Art code Logo" class="auth-logo">
                <h2>Welcome to Art code</h2>
                <p>Sign up or log in to get started</p>
            </div>

            <div class="auth-tabs">
				<a asp-action="LogIn" >
                    <button class="auth-tab active" data-tab="login">
                    Log In
                    </button>
                </a>
				<a asp-action="RegisterStudent" >
                    <button class="auth-tab" data-tab="signup">
                    Sign Up
					</button>
				</a>
            </div>
            <!-- Login Form -->
            <div class="auth-form-container" id="login-form">
                <form id="loginForm" asp-action="LogIn" asp-controller="Account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" type="email" id="loginEmail" class="form-control" required>
                        <label asp-for="Email" for="loginEmail">Email</label>
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="password" id="loginPassword" class="form-control" required>
                        <label asp-for="Password" for="loginPassword">Password</label>
                    </div>
                    <button type="submit" class="btn-primary w-100">
                        Log In
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script src="/js/auth.js"></script>
} 